<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_blue"
    android:layout_marginTop="14dp"
    android:layout_marginEnd="14dp"
    android:padding="12dp"
    android:layout_marginStart="8dp"
    app:layout_goneMarginEnd="8dp">

    <TextView
        android:id="@+id/tv_city_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barrie"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_temp_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature : 26C"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_city_rv"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_delete_rv"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/red_background_black_border"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>